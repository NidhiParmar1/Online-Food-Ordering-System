
<div class=" jumbotron">
  <div class="text-center"><h2>Update Product Details</h2></div>
  
  <form class="form-horizontal" action="/updateAction" method="post" enctype="multipart/form-data">
    <input type="hidden" class="form-control" id="email" placeholder="Enter Product" name="id" value="{{prod._id}}">
    <div class="form-group">
      <label class="control-label col-sm-2" for="email">Product Name:</label>
      <div class="col-sm-8">
        <input type="text" class="form-control" id="email" placeholder="Enter Product" name="pname" value="{{prod.Pname}}">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2"for="sel1">Category:</label>
      <div class="col-sm-8">
        <select   name="option" value="" >
          <option>{{prod.Category}}</option>
          <option >Ready To Eat</option>
          <option >Ready To Drink</option>
          <option >Ready To Cook</option>
        </select>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="email">Price:</label>
      <div class="col-sm-8">
        <input type="number" class="form-control" id="email" placeholder="Enter Price" name="price" value="{{prod.Price}}">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="email">Description:</label>
      <div class="col-sm-8">
        <textarea row="4"  rows="5" id="comment" class="form-control" name="text" value="">{{prod.Description}}</textarea>
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-sm-2" for="email">Image:</label>
      <div class="col-sm-8">
         <input type="file" class="form-control" id="email" placeholder="Enter Price" name="file"><img height="100" width="100" src="{{prod.ImgAddress}}" alt="img not found">
      </div>
    </div>
    
    <div class="form-group text-center">        
      <div class="col-sm-offset-2 col-sm-8">
        <button type="submit" class="btn btn-info text-center">Update</button>
      </div>
    </div>
  </form>

<style>

.jumbotron{

  border: 2px solid #4d4d4d;
  margin: auto;
  background-color: #cccccc;
}

h2{
  color:blue;
  font-size:36px;
  font-weight: bold;
  text-shadow: 0 6px 4px #95ef67,
        -3px -5px 4px #ff2192,
         3px -5px 4px #ffe200;
}
h2:hover{
  transform: scale(1.2);
  }
  h3:hover{transform: scale(1.2);}
</style>
  
}
</body>
</html>
