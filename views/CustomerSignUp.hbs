
<script>
$(document).ready(function(){
  $("#login").blur(function(){
    var login=$("#login").val();
//    alert(id)

    $.ajax({
      url:  'CheckloginId',
      data:"login="+login,
      type:'get',
      success:function(response)
      {
  //      alert(response)
        if(response.msg=="Already Exist")
        $("#login").val(" ");
        $("#errmsg").html(login+" "+response.msg);
        }
     });  //AJAX end
  });   //blur end
});    //ready end
</script>


